#!/bin/bash

#     __    _ __         _     __
#    / /_  (_) /_  _____(_)___/ /________ _____  _____
#   / __ \/ / __ \/ ___/ / __  / ___/ __ `/ __ \/ ___/
#  / / / / / /_/ / /  / / /_/ / /__/ /_/ / /_/ (__  )
# /_/ /_/_/_.___/_/  /_/\__,_/\___/\__,_/ .___/____/
#                                      /_/
# Maps CAPSLOCK to CTRL & ESC

setxkbmap -option ctrl:nocaps
xcape -e "Control_L=Escape"
